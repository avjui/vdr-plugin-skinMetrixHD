#!/bin/sh
# postinst script for freevdr-plugin

set -e

USER=freevdr
GROUP=freevdr

case "$1" in
    configure)
	[ -x /usr/sbin/freectl ] && /usr/sbin/freectl addplugin "skinmetrixhd" \
							 "Skin MetrixHD" \
							 "--iconpath=/etc/vdr/plugins/skinnopacity/icons/ --logopath=/etc/vdr/plugins/skinnopacity/logos/"

		chown -R $USER:$GROUP /etc/vdr/
		chown $USER:$GROUP /etc/vdr/* > /dev/null 2>&1 || true
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
